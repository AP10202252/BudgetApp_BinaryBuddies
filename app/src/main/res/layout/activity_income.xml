            android:id="@+id/incomeEntry8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="#2E3B3E"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/incomeEntry7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <!-- Categories Button (Bottom Center) -->
                <Button
                    android:id="@+id/categoriesTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#2E3B3E"
                    android:text="Categories"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toStartOf="@id/expensesTab"
                    app:layout_constraintStart_toEndOf="@id/incomeTab"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Expenses Button (Bottom Right Corner) -->
                <Button
                    android:id="@+id/expensesTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#2E3B3E"
                    android:text="Expenses"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/incomeIcon8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"

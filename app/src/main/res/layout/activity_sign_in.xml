<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".SignIn">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="94dp"
        android:layout_height="24dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/audiowide"
        android:text="Log In"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E4BF96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/audiowide"
        android:text="User Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#D5BFA0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:inputType="text"
        android:textColor="#DDBF9C"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/audiowide"
        android:text="Password:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F1D4AC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="288dp"
        android:backgroundTint="#09161F"
        android:fontFamily="@font/audiowide"
        android:shadowColor="#252424"
        android:text="Continue"
        android:textColor="#E2BB98"
        android:textColorHighlight="#FBFAF7"
        android:textColorHint="#070707"
        android:textColorLink="#EAE5E1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"
        app:rippleColor="#FCE1C0"
        app:strokeColor="#FFFDFD" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="296dp"
        android:backgroundTint="#09161F"
        android:fontFamily="@font/audiowide"
        android:text="Cancel"
        android:textColor="#DBB594"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:inputType="textPassword"
        android:textColor="#F5D6B3"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/finallgo" />
</androidx.constraintlayout.widget.ConstraintLayout>
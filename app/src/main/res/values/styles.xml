<resources>
    <!-- Base Application Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/blurredbckg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#D84315</item>
        <item name="colorAccent">#2E3B3E</item>
    </style>

    <!-- Calendar Date Text Style -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Calendar Week Day Text Style -->
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>